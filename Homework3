      std::cout << i << "  ";
    }
    cout << "0";
      return 0;
    }





#include <iostream>

using namespace std;

int
main ()
{
  int num = 0;
  std::cout << "Number: ";
  std::cin >> num;
  int x = 0;
  int y = 1;
  int z = x + y;
  
  cout << x << " " << y << " ";
  while(z <= num){
      cout << z << " ";
      x = y;
      y = z;
      z = x + y;
     }

      return 0;
    }

